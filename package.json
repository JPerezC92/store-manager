{
	"name": "store-manager",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"type": "commonjs",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "pnpm env:dev -- nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:cov": "vitest run --coverage",
		"test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
		"test:e2e": "pnpm env:test -- vitest run --config ./vitest.config.e2e.ts",
		"env:dev": "dotenv -e .env.development.local",
		"env:test": "dotenv -e .env.test.local",
		"migrate": "pnpm env:dev -- prisma migrate"
	},
	"dependencies": {
		"@anatine/zod-nestjs": "^2.0.9",
		"@anatine/zod-openapi": "^2.2.6",
		"@libsql/client": "0.8.0",
		"@nestjs/common": "^10.0.0",
		"@nestjs/core": "^10.0.0",
		"@nestjs/platform-express": "^10.0.0",
		"@nestjs/swagger": "^7.4.2",
		"@prisma/adapter-libsql": "^5.19.1",
		"@prisma/client": "^5.19.1",
		"http-status-codes": "^2.3.0",
		"reflect-metadata": "^0.2.0",
		"rxjs": "^7.8.1",
		"store-manager": "link:",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@faker-js/faker": "^9.0.1",
		"@nestjs/cli": "^10.4.5",
		"@nestjs/config": "^3.2.3",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/testing": "^10.0.0",
		"@swc/cli": "0.4.1-nightly.20240914",
		"@swc/core": "^1.7.26",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.2",
		"@types/node": "^20.3.1",
		"@types/supertest": "^6.0.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vitest/coverage-v8": "^2.1.1",
		"dotenv-cli": "^7.4.2",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.30.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-unused-imports": "^4.1.4",
		"jest": "^29.5.0",
		"prettier": "^3.0.0",
		"prisma": "^5.19.1",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.3",
		"unplugin-swc": "^1.5.1",
		"vitest": "^2.1.1",
		"vitest-mock-extended": "^2.0.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
